<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_10dp"
    android:background="@color/colorH"
    android:weightSum="1">

    <org.linphone.utils.BitVaultFont
        style="@style/style_small_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:background="?android:selectableItemBackground"
        android:textColor="@color/colorPrimary"
        android:text="@string/key_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/publicKeyTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/keyHeadingTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/public_key" />

    </LinearLayout>

    <ImageView
        android:id="@+id/callingImg"
        android:layout_width="@dimen/height_40dp"
        android:layout_height="@dimen/height_40dp"
        android:background="?android:selectableItemBackground"
        android:padding="@dimen/margin_10"
        android:src="@drawable/securecallicon"
        />


</LinearLayout>
