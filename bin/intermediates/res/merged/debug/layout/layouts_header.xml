<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_hight"
        android:background="@color/headerColor">

        <RelativeLayout
            android:id="@+id/mHeaderLeftIconRl"
            android:layout_width="@dimen/header_hight"
            android:layout_height="@dimen/header_hight"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/headerLeftViewImage"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="@dimen/header_left_right_icon_margin"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/header_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorH"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/header_center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/colorH"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/mHeaderRightIconRl"
            android:layout_width="@dimen/header_hight"
            android:layout_height="@dimen/header_hight"

            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/header_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/header_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorH"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>